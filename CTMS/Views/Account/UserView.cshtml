@model IEnumerable<CTMS.Models.User>

@{
    ViewData["Title"] = "UserView";
}
@if (TempData["AlertMessage"] != null)
{
    <div class="alert alert-success">
        <strong>Success !</strong>@TempData["AlertMessage"]

    </div>
}
<div class="shadow p-3 mb-5 bg-white rounded">
    <div class="">



        <div class=" shadow-none p-3 mb-5 bg-light rounded ">
            <p>
                <a onclick="showInPopUp('@Url.Action("AddUser","Account",null,Context.Request.Scheme)',' Add New User')" class="btn btn-outline-success"><i class="fa-solid fa-plus"></i> Create New</a>
            </p>

            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.FullName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UserName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>

                        <td>Action</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.FullName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>

                            <td>
                                <a onclick="showInPopUp('@Url.Action("UpdateUser","Account",new {id = item.Id},Context.Request.Scheme)','Update User')" class="btn btn-primary btn-sm ">Update</a>
                            </td>
                            <td>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>